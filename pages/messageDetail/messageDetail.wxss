/* pages/messageDetail/messageDetail.wxss */
.messageDetailBox{
  border-top:1px solid #dcdcdc;
  border-bottom:1px solid #dcdcdc;
  padding: 30rpx;
}
.message-title{
font-size: 16px;
color: rgba(0,0,0,0.65);
letter-spacing: 0;
line-height: 16px;
margin-bottom: 12px;
}
.message-small{
  font-size: 12px;
  color: rgba(0,0,0,0.38);
  letter-spacing: 0;
  line-height: 12px;
}
.message-contentBox{
  padding: 30rpx;
  font-size: 16px;
  line-height: 1.5;
  color: rgba(0,0,0,0.87);
}
.message-contentBox .pic{
  display: block;
  margin: 20rpx auto;
  max-width: 100%;
}