page{background: #f4f4f4;padding-bottom: 3.0rem;border-top:1px solid #e6e6e6;}
.weekly_info_time{font-size:0.75rem;padding:0.8rem 0.6rem;color: #9e9e9e;background:#fff;position: relative;z-index: 1} 
.weekly_title{padding: 1.2rem 0.8rem 0.6rem;border-bottom:1px solid #e6e6e6;color: #979797;font-size: 0.8rem;}
.weekly .picker_lt{height: 2.8rem;background: #fff;padding:0 2.2rem 0 0.8rem;position: relative;border-bottom:1px solid #e6e6e6;}
.weekly .picker_lt image{width: 0.48rem;height:0.8rem;position:absolute;right: 1.0rem;top: 50%;margin-top: -0.4rem;}
.weekly .picker_lt .tis{color: #9e9e9e;}
.weekly .date_text{padding-right: 0.5rem;}
.weekly_textarea textarea{display: block;width:100%;padding:0 0.5rem;background: #fff;color: #9e9e9e;font-size: 0.85rem;min-height: 12.0rem;
-webkit-box-sizing: border-box; 
 box-sizing: border-box; 
}
.weekly_submit{width: 100%;position: fixed;left: 0;bottom: 0;height: 3.0rem;background: #fff;border-top:1px solid #e6e6e6;}
.weekly_submit button{display: block;width:48%;padding: 0;font-size:0.9rem;line-height:1.6rem;border-radius:0;background: none;}
.weekly_submit button::after{border: none;}
.weekly_submit .btn_submit{color: #1a8cfe;border-left:1px solid #e6e6e6;}

.weekly_textarea{padding:0.5rem 0;background:#fff;}
