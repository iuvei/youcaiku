/* pages/person/index.wxss */
.bgImage{
  width: 100%;
  display: block;
}
.avatorBox{
  text-align: center;
  width: 80%;
  margin: 0 auto 90rpx;
}
.avatorPic{
  width: 200rpx;
  height:200rpx;
  border-radius:50%;
  margin: -100rpx auto 20rpx;
}
.avatorTxt{
  font-size: 14px;
  color: rgba(0,0,0,0.38);
  text-align: center;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.avatar-input{
  opacity: 0;
  visibility: hidden;
  width: 100%;
  height: 1px;
}
.media-list{
  position: relative;
}
.media-item{
  border-bottom: 1px solid #e3e3e3;
  position: relative;
}
.media-title{
  display: flex;
  display: -webkit-flex;
  font-size: 14px;
  line-height: 2;
  justify-content: space-between;
  align-items:center;
  padding: 10rpx 32rpx 10rpx 90rpx;
}
.media-title-left{
color: rgba(0,0,0,0.89);
}
.media-title-right{
  color: rgba(0,0,0,0.38);
  position: relative;
}
.icon-arrow image{
  width: 9px;
  height:15px;
}
.icon-left{
 width: 40rpx;
 height:40rpx;
 position: absolute;
 left:32rpx;
}
.icon-left image{
  width: 100%;
  max-height: 100%;
  vertical-align: middle;
}

